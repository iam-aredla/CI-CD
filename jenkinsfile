pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/your-repo.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'python -m unittest discover'
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    def dockerImage = docker.build("your-docker-repo/your-app:${env.BUILD_ID}")
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d -p 5000:5000 your-docker-repo/your-app'
            }
        }
        stage('Notifications') {
            steps {
                slackSend channel: '#build-status', message: "Build ${env.BUILD_NUMBER} - ${currentBuild.currentResult}"
            }
        }
    }
}
